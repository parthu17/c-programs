#include <stdio.h>
#include <stdlib.h>
int linear (int*,int,int);
int main(){
 int n,*p,i,key;
 printf("enter the number of elements");
 scanf("%d",&n);
 p=(int*)malloc(n*sizeof(int));
 printf("enter the array elements");
 for(i=0;i<n;i++){
  printf("enter the %d element",i+1);
  scanf("%d",p+i);
  }
  printf("enter the element to be found");
  scanf("%d",&key);
  printf("the element %d is in %d index",key,linear(p,n,key));
  return 0;
}
int linar(int*p,int n,int key){
 int i;
 for(i=0;i<n;i++){
  if(*(p+i) == key){
     return i;
}
}
if(i=n){
 return -1;
}
}



