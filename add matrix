# include <stdio.h>
# include <stdlib.h>
int main(){
int r,c,i,j;
printf("enter number of rows and columns");
scanf("%d%d",&r,&c);
int *p[r],*q[r],a[r][c];b[r][c],c[r][c];
printf("enter the first matrix");
for(i=0;i<r;i++){
 for (j=0;j<c;j++){
  scanf("%d",&a[i][j]);
}
}
printf("enter the second matrix");
for(i=0;i<r;i++){
 for (j=0;j<c;j++){
  scanf("%d",&b[i][j]);
}
}
for(i=0;i<r;i++){
p[i]=&a[i][0];
}
for(i=0;i<r;i++){
q[i]=&b[i][0];
}
for(i=0;i<r;i++){
 for(j=0;j<c;j++){
 c[i][j]= *((p+i)+j) + *((q+i)+j);
}
}
printf("sum is:");
for(i=0;i<r;i++){
 for(j=0;j<c;j++){
 printf("%d",c[i][j]);
}
return 0;
}
