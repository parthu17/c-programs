# include <stdio.h>
# include <stdlib.h>
int main(){
int r,c,i,j,sum=0;
printf("enter number of rows and columns");
scanf("%d%d",&r,&c);
int *p[r],a[r][c];
printf("enter the first matrix");
for(i=0;i<r;i++){
 for (j=0;j<c;j++){
  scanf("%d",&a[i][j]);
}
}
for(i=0;i<r;i++){
 p[i] = &a[i][0];
}
for(i=0;i<r;i++){
 for (j=0;j<c;j++){
  if(i==j){
   sum+= *((p+i)+j);
}
}
printf("trace=%d",sum);
return 0;
