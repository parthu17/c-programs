#include <stdio.h>
#include <stdlib.h>
int sum(int*,int);
int length(int*,int);
itn main(){
int n,i,*p,even=0,odd=0;
printf("enter length of array");
scanf("%d",&n);
p= int* calloc(n,sizeof(int));
for(i=0;i<n;i++){
scanf("%d",p+i);
}
printf("length of array %d",length(p,n));
printf("sum of array is %d",sum(p,n));
for(i=0;i<n;i++){
if((*(p+i))%2 ==0){
even ++;
}
else{
odd++;
}
}
printf("no.of even %d and odd %d",even, odd);
return 0;
int sum(int *p,int n){
int sum1=0,i;
for(i=0;i<n;i++){
sum+=*(p+i);
}
return sum1;
}
int length(int *p,int n){
int i,count=0;
for(i=0;i<n;i++){
count++;
}
return count;
}
