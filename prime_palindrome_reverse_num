# include <stdio.h>
void prime(int);
void pali(int);
int rev(int);
int tot(int);
int main(){
int n;
printf("enter the number you want");
scanf("%d",&n);
printf("reverse is %d",rev(n));
printf("sum is %d",tot(n));
pali(n);
prime(n);
return 0;
}
int rev(int n){
int rem,sum=0;
while(n!=0){
rem=n%10;
sum=(sum*10) +rem;
n=n/10;
}
return sum;
}
void pali(int n){
if(rev(n) == n){
printf("palindrome"):
}
else{
printf("not palindrome");
}
}
void prime(int n){
int i,num=0;
for(i=0;i<=n;i++){
if(n%i==0){
num++;
}
if(num==2){
printf("prime");
}
else{
printf("not prime");
}
}
int tot(int n){
int rem,sum=0;
while(n!=0){
rem=n%10;
sum=sum +rem;
n=n/10;
}
return sum;
}

