#include <stdio.h>
#include <stdlib.h>
void selection(int*,int);
int main(){
 int n,*p,i;
 printf("enter the number of elements");
 scanf("%d",&n);
 p=(int*)malloc(n*sizeof(int));
 printf("enter the array elements");
 for(i=0;i<n;i++){
  printf("enter the %d element",i+1);
  scanf("%d",p+i);
  }
  selection(p,n);
  printf("the sorted elements are :");
  for(i=0;i<n;i++){
  printf("%d",*(p+i));
  }
  return 0;
}
void selection(int*p,intn){
 inti,j,min,temp;
 for(i=0;i<n-1;i++){
  min=i;
  for(j=i;j<n;j++){
   if(*(p+j)<*(p+min)){
    min=j;
    }
  }
  if(i!=min){
    temp=*(p+i);
    *(p+i) = *(p+min);
    *(p+min) =temp;
    }
 }
 }
